[*]
charset=utf-8
end_of_line=lf
trim_trailing_whitespace=false
insert_final_newline=false
indent_style=tab
tab_width=4

[{*.sht,*.html,*.shtm,*.shtml,*.htm}]
indent_style=space
indent_size=4

[{*.jhm,*.cscfg,*.rng,*.wadcfgx,*.axml,*.wsdl,*.webref,*.fxml,*.myapp,*.svcmap,*.xslt,*.jrxml,*.ant,*.xul,*.xsl,*.xsd,*.jnlp,*.csdef,*.disco,*.tld,*.xml}]
indent_style=space
indent_size=4

[{*.uplugin,*.json}]
indent_style=space
indent_size=2

[*.config]
indent_style=space
indent_size=4

[{*.csproj,*.ccproj,*.androidproj}]
indent_style=space
indent_size=4

